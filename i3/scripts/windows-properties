# vim: filetype=i3config

# Window borders to pixel 1

new_window pixel 6
new_float pixel 6

# Floating apps

# Calculator
for_window [class="calculator"] floating enable, resize set 600 800, move position 900 400

# Printer settings
for_window [title="Printers - localhost"] floating enable, resize set 600 800, move position 900 400

# Picture in picture
for_window [title="Picture-in-Picture"] sticky enable, border none, resize set 880 495, move position 1680 945
for_window [title="Picture in picture"] sticky enable, border none, resize set 880 495, move position 1680 945
for_window [title="Picture in Picture"] sticky enable, border none, resize set 880 495, move position 1680 945

# Blueman - bluetooth applet
for_window [class="Blueman-applet"] floating enable, border none

# VirtualBox
for_window [title="Create Virtual Machine"] border none
for_window [title="Create Virtual Hard Disk"] border none
for_window [title="Please choose a virtual optical disk file"] border none
for_window [title="Close Virtual Machine"] border none

# Popups
for_window [class="Yad" title="yad-calendar"] floating enable
for_window [class="Nextcloud" title="Add Nextcloud account"] floating enable, border none, resize set 600 800, move position 900 400
for_window [class="File-roller" title="Extract"] floating enable, border none, resize set 600 800, move position 900 400