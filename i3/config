exec --no-startup-id i3-msg 'workspace $ws1; exec kitty -e ranger; workspace $ws1; sleep 1'
exec --no-startup-id i3-msg 'workspace $ws2; exec kitty; workspace $ws1; sleep 1'
exec --no-startup-id i3-msg 'workspace $ws3; exec firefox; workspace $ws1; sleep 1'
exec --no-startup-id i3-msg 'workspace $ws9; exec spotify; workspace $ws1; sleep 1'
for_window [class="Spotify"] move to workspace $ws9 #Spotify always on workspace 9

#################################
# Shutdown, reboot, lock screen
################################# 
set $Locker i3lock-fancy-dualmonitor && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+mod1+p mode "$mode_system"

#################################
# Picture-in-Picure on all workspaces
#################################
for_window [title="Picture-in-Picture"] sticky enable

#################################
# Display Wallpaper
#################################
exec_always --no-startup-id feh --bg-fill /home/pietrysz/Pictures/Wallpaper/5553171_venom-wallpapers
#################################
# Windows Compositor
#################################
exec_always --no-startup-id picom --config /home/pietrysz/.config/picom/picom.conf -f

#################################
# Disable title bar
#################################
for_window [class="^.*"] border pixel 1
new_window 1pixel

