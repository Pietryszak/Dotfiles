# Zshrc
alias zshrc='nvim ~/.zshrc'
alias rld='source ~/.zshrc'

# Alias
alias als="bat ~/.config/oh-my-zsh/custom/alias.zsh"

# Neovim
alias v="nvim"
alias vi="nvim"
alias neovim="nvim"
alias vim="nvim"
alias sv="sudo nvim"

#Top
alias top="htop"
alias btop="bpytop"

# Neofetch
alias neo="neofetch"

# Update
alias update="sudo dnf update -y"

# Install
alias install="sudo dnf install -y"

# Mkdir
alias md="mkdiI"
alias mdp="mkdir -p"

# Rmdir
alias rd="rm -Ir"

# Sudo
alias root="sudo su"
alias s='sudo'

# Exit
alias ext="exit"

# Ls
alias ls="ls -alh"

# BAT
alias cat="bat"

# Git
alias gc="git clone"

# Clear
alias c="clear"

# Command history
alias h="history"

# Cd
alias .='cd'
alias ..='cd ..'
alias ...='cd ../..'
