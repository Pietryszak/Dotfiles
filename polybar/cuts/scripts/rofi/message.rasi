/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bga;
    text-color:             @fg;
    font:		            "FiraCode Nerd Font 20";
}

window {
    width:      	        250px;
    padding:    	        25px;
    border:		            0px;
    border-radius:          0px;
    border-color:           @ac;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 	            true;
    text-color:		        @ac;
}
